<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/cardview_light_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3.0dp"
    >

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_2dp"
        android:background="@drawable/border"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar

            android:visibility="gone"
            android:id="@+id/settings_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/back_to_home"
                android:background="@drawable/ic_arrow_back_black_24dp"

                />
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:layout_width="fill_parent"
                android:layout_height="3.0dip"
                android:layout_marginTop="4.0dip"
                android:layout_marginBottom="4.0dip"
                android:background="@drawable/divider" />
            <Button
                android:textAllCaps="false"
                android:id="@+id/button_chang_lang"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4.0dip"
                android:gravity="center"
                android:background="@drawable/button_pc"
                android:visibility="gone"
                android:paddingLeft="@dimen/button_padding_left"
                android:paddingTop="@dimen/button_padding_top"
                android:paddingRight="@dimen/button_padding_right"
                android:paddingBottom="@dimen/button_padding_bottom"
                android:text="@string/chang_lang"
                android:textColor="@color/white"
                android:textSize="22sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_30sdp"
                android:layout_gravity="center"
                android:textColor="#000"
                android:text="@string/language" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:weightSum="2.0">
            <Button
                android:textAllCaps="false"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:text="@string/Arabic"
                android:id="@+id/BTN_ar"
                android:textColor="@color/white"
                android:textSize="@dimen/_30sdp"
                android:background="@drawable/button_background_selected"

                />

            <Button
                android:textAllCaps="false"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="@string/English"
                android:id="@+id/BTN_en"
                android:textColor="@color/white"
                android:textSize="@dimen/_30sdp"
                android:background="@drawable/button_background_selected"

                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:weightSum="2.0">

                <ImageButton
                    android:id="@+id/imag_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4.0dip"
                    android:background="@drawable/them_black1"
                    android:paddingLeft="@dimen/button_padding_left"
                    android:paddingTop="@dimen/button_padding_top"
                    android:paddingRight="@dimen/button_padding_right"
                    android:paddingBottom="@dimen/button_padding_bottom" />
                <ImageButton
                    android:id="@+id/imag_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4.0dip"
                    android:background="@drawable/them_green"

                    android:paddingLeft="@dimen/button_padding_left"
                    android:paddingTop="@dimen/button_padding_top"
                    android:paddingRight="@dimen/button_padding_right"
                    android:paddingBottom="@dimen/button_padding_bottom" />
                <ImageButton
                    android:id="@+id/imag_yallow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4.0dip"
                    android:background="@drawable/them_yallo"
                    android:paddingLeft="@dimen/button_padding_left"
                    android:paddingTop="@dimen/button_padding_top"
                    android:paddingRight="@dimen/button_padding_right"
                    android:paddingBottom="@dimen/button_padding_bottom" />
                <ImageButton
                    android:id="@+id/imag_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4.0dip"
                    android:background="@drawable/them_blue"
                    android:paddingLeft="@dimen/button_padding_left"
                    android:paddingTop="@dimen/button_padding_top"
                    android:paddingRight="@dimen/button_padding_right"
                    android:paddingBottom="@dimen/button_padding_bottom" />
                <ImageButton
                    android:id="@+id/imag_purple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4.0dip"
                    android:background="@drawable/them_purple"
                    android:paddingLeft="@dimen/button_padding_left"
                    android:paddingTop="@dimen/button_padding_top"
                    android:paddingRight="@dimen/button_padding_right"
                    android:paddingBottom="@dimen/button_padding_bottom" />



            </LinearLayout>


            <!--            android:entries="@array/video_ad_button_options"-->
            <View
                android:layout_width="fill_parent"
                android:layout_height="3.0dip"
                android:layout_marginTop="4.0dip"
                android:layout_marginBottom="4.0dip"
                android:background="@drawable/divider" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip">

            </RelativeLayout>





            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip">


            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="3.0dip"
                android:layout_marginTop="4.0dip"
                android:layout_marginBottom="4.0dip"
                android:background="@drawable/divider" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip">

                <Button
                    android:textAllCaps="false"
                    android:id="@+id/button_fooda_restore_default"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4.0dip"
                    android:gravity="center"
                    android:background="@drawable/button_background"
                    android:paddingLeft="@dimen/button_padding_left"
                    android:paddingTop="@dimen/button_padding_top"
                    android:paddingRight="@dimen/button_padding_right"
                    android:paddingBottom="@dimen/button_padding_bottom"
                    android:text="@string/restore_default"
                    android:textColor="@color/white"
                    android:textSize="22sp"/>


            </RelativeLayout>



        </LinearLayout>
        <FrameLayout
            android:id="@+id/fl_adplaceHolderTest2"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginTop="7dp" />
    </LinearLayout>
</ScrollView>